<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#405657">

    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="370dp"
        android:layout_height="600dp"
        android:layout_marginTop="20dp"
        android:animateLayoutChanges="true"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="25dp"
        app:cardElevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/cardLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/textView"
                android:layout_width="265dp"
                android:layout_height="75dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="515dp"
                android:text="Settings"
                android:textColor="#000000"
                android:textSize="45sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textSchedule"
                android:layout_width="187dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="23dp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="467dp"
                android:autofillHints=""
                android:ems="10"
                android:inputType="text"
                android:text="Unique time everyday"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textTimeweekdays"
                android:layout_width="126dp"
                android:layout_height="31dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="192dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="412dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textWeekends"
                android:layout_width="126dp"
                android:layout_height="31dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="190dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="352dp"
                android:textColor="#000000" />

            <Button
                android:id="@+id/buttonChangeTime"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="49dp"
                android:layout_marginLeft="207dp"

                android:layout_marginBottom="355dp"
                android:text="Weekends"
                android:textSize="12sp" />

            <Button
                android:id="@+id/buttonChangeTime2"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="47dp"
                android:layout_marginLeft="207dp"

                android:layout_marginBottom="405dp"
                android:text="Weekdays"
                android:textSize="12sp" />

            <Switch
                android:id="@+id/switch2"
                android:layout_width="66dp"
                android:layout_height="46dp"
                android:visibility="visible" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>